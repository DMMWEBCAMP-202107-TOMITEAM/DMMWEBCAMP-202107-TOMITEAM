<div class="container">
  <h3>注文情報入力</h3>
  <%= form_with(model: @order,url:orders_check_path , local: true ) do |f| %>
    <h4>支払方法</h4>
    <%= f.radio_button :payment_method, :クレジットカード%>
    <%= f.label :payment_method, :クレジットカード%>
    <%= f.radio_button :payment_method, :銀行振り込%>
    <%= f.label :payment_method, :銀行振り込 %>
    <h4>お届け先</h4>
    <%= f.radio_button :address,[ current_client.postal_code , " ", current_client.address ," ", current_client.name ] %>
    <%= f.label :address, "ご自身の住所" %>
    <p>〒<%= current_client.postal_code %> <%= ccurrent_client.address %> <%= current_client.name %></p>
    <%= f.radio_button :address, [:mail] %>
    <%= f.label :address, "登録済住所から選択" %>
    <%= f.select :mail_address, @adresses.all.map { |m| [m.postal_code+" "+m.address+" "+m.name] },include_blank: " 登録してある配送先住所から選択" %>
    <%= f.radio_button :address, [:new] %>
    <%= f.label :address, "新しいお届け先" %>
    <%= f.label :郵便番号 %>
    <%= f.text_field :newpostal_code %>
    <%= f.label :住所 %>
    <%= f.text_field :newaddress %>
    <%= f.label :宛名 %>
    <%= f.text_field :newname %>
    <%= hidden_field_tag :page, "new" %>
    <%= f.submit "確認画面へ進む" %>
  <% end %>
</div>