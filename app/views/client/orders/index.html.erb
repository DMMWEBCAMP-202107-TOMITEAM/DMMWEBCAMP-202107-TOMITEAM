<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%y/%m/%d') %></td>
        <td>
          <p><%= order.postal_code %></p>
          <p><%= order.address %></p>
          <p><%= order.name %></p>
        </td>
        <td>
          <% order.order_items.all.each do |item| %>
            <p><%= item.items.name %></p>
          <% end %>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= order.order_status %></td>
        <td>
          <%= link_to "表示する",order_path,class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>