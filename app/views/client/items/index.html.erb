<div class="container">
  <div class="row">
    <div class="col">
      <h1>商品一覧
      （全 <%= @items.count %> 件）
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <% @items.each do |item| %>
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag @item, :image, :fill, 100, 100, fallback: "no_image.jpg" %><br>
        <% end %>
        <%= item.name %><br>
        <%= item.price %><br>
      <% end %>
    </div>
  </div>
</div>