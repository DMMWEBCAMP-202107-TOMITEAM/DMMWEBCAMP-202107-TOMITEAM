
<section class="section">
  <div class="m-5">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <%= render 'genre', genres: @genres%>
      </div>
      <div class="col-md-10">
        <h1>商品一覧（全 <%= @items.count %> 件）</h1>
        <div class="row">
          <% @items.each do |item| %>
          <div class="col-md-3">
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg" %><br>
              <% end %>
              <%= item.name %><br>
              <%= item.price %><br>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= paginate @items %>
  </div>
</div>
</div>


