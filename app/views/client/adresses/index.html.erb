  <div class="container">
    
    <br></br>
  	<h2><i class="fas fa-truck"></i>配送先登録/一覧</h2><br>
  
    <%= form_for @adress, url:adresses_path, method: :post do |f| %>
      <div class = "row">
        <div class = "col-xs-3">
          <%= f.label "郵便番号(ハイフンなし)" %>
        </div>
        <div class = "col-xs-4">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div><br>
        
      <div class = "row">
        <div class = "col-xs-1">
          <%= f.label "住所" %>
        </div>
        
        <div class = "col-xs-4">
          <%= f.text_field :adress, autofocus: true, autocomplete: "address", :size => "40*40" %>
        </div>
      </div><br>
      
      <div class = "row">
        <div class = "col-xs-1">
          <%= f.label :宛名 %>
        </div>
        
        <div class = "col-xs-2">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
         <div class = "col-xs-1">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
    
    <table  class="table table-bordered">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    
  </div>