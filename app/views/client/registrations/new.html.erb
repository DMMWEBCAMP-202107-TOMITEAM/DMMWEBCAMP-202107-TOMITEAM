  <div class="container">
    <br></br>
    <h2>新規会員登録</h2>
    <br></br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "client/shared/error_messages", resource: resource %>

      <div class="row">
        <label class ="col-lg-3">名前</label>
        <span class = "right">(姓)</span>
        <div class="col-lg-3">
          <%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name",  placeholder: "文鳥" %>
        </div>
        <div class="col-lg-3">
          <span>(名)</span>
          <%= f.text_field :first_name,autoforcus: true, autocomplete: "first_name",  placeholder: "太郎" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">フリガナ</label>
        <span>(セイ)</span>
        <div class="col-lg-3">
           <%= f.text_field :kana_last_name,autoforcus: true, autocomplete: "kana_last_name",  placeholder: "ブンチョウ" %>
        </div>
        <div class="col-lg-3">
          <span>(メイ)</span>
          <%= f.text_field :kana_first_name,autoforcus: true, autocomplete: "kana_first_name",  placeholder: "タロウ" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">郵便番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",  placeholder: "0000000" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-6">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60",  placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">電話番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",  placeholder: "00000000000" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">パスワード（確認用）</label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "encrypted_password" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-lg-6">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>

      <br></br>
      <h3>既に登録済みの方</h3>
      <div class="col-sm-3">
        <%- if controller_name != 'sessions' %>
          <%= link_to "こちら", new_session_path(resource_name) %>
        <% end %>
        からログインしてください
      </div>
    <% end %>
  </div>
