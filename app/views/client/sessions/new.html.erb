  <div class="font">
  <div class="container">
    <br></br>
    <br></br>
    <h2>会員の方はこちらからログイン</h2>
    <br></br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <label class="col-md-2">メールアドレス</label>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"60",  placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="row">
      <label class="col-md-2">パスワード</label>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", :size=>"60" %>
      </div>
    </div>
    <br></br>

    <div class="actions">
      <%= f.submit "ログイン", class: "moe-btn" %>
    </div>

      <% end %>

    <br></br>
    <br>
      <h3>登録がお済みでない方</h3>
      <br></br>
      <p><%= link_to "こちら", new_client_registration_path, class: "moe-btn" %>から新規登録をしてください</p><br>
    </br>
  </div>
  </div>